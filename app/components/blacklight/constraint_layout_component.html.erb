<%# Origin: https://github.com/projectblacklight/blacklight/blob/v7.37.0/app/components/blacklight/constraint_layout_component.html.erb 

Overrides Blacklight's constraint_layout_component.html.erb to add AZ Bootstrap classes.
%>

<span class="btn-group my-2 applied-filter constraint <%= @classes %>">
  <span class="constraint-value btn btn-light disabled">
    <% if @label.present? %>
      <span class="filter-name"><%= @label %></span>
    <% end %>
    <% if @value.present? %>
      <%= content_tag :span, @value, class: 'filter-value', title: strip_tags(@value) %>
    <% end %>
  </span>
  <% if @remove_path.present? %>
    <%= link_to(@remove_path, class: 'btn btn-light remove') do %>
      <span class="remove-icon" aria-hidden="true">âœ–</span>
      <span class="sr-only visually-hidden">
        <%= if @label.blank?
            t('blacklight.search.filters.remove.value', value: @value)
          else
            t('blacklight.search.filters.remove.label_value', label: @label, value: @value)
          end
        %>
      </span>
    <% end %>
  <% end %>
</span>