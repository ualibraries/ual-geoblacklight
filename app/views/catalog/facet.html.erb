<%#  Origin: https://github.com/projectblacklight/blacklight/blob/v7.37.0/app/views/catalog/facet.html.erb

Overrides Blacklight's view facet.html.erb to add an ID to .facet-pagination for CSS overrides.
%>

<%= render Blacklight::System::ModalComponent.new do |component| %>
  <% component.with_prefix do %>
    <div id="ual_facet_top" class="facet-pagination top row justify-content-between">
      <%= render :partial=>'facet_pagination' %>
    </div>
  <% end %>

  <% component.with_title { facet_field_label(@facet.key) } %>

  <%= render partial: 'facet_index_navigation' if @facet.index_range && @display_facet.index? %>

  <div class="facet-extended-list">
    <%= render_facet_limit(@display_facet, layout: false) %>
  </div>

  <% component.with_footer do %>
    <div id="ual_facet_bottom" class="facet-pagination bottom w-100 row justify-content-between align-items-center">
      <%= render :partial=>'facet_pagination' %>
    </div>
  <% end %>
<% end %>